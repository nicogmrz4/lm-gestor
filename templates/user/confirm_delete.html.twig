<dialog 
  {{ stimulus_controller('confirm--delete') }}
  data-action="crud--user:onDelete@window->confirm--delete#onDelete"
  id="confirm_delete_user" 
  class="modal">
  <div class="modal-box">
    <form id="close-delete-user-confirm" method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>
    <h3 class="font-bold text-lg" {{ stimulus_target('confirm--delete', 'title') }}>¿Seguro que queres proceder?</h3>
    <p class="py-4" {{ stimulus_target('confirm--delete', 'message') }}>Una vez eliminado, no se podra revertir la acción.</p>
    <form
      id="delete-user-form"
      {{ stimulus_target('confirm--delete', 'form') }} 
      action="" 
      method="post">
      <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}">
    </form>
    <div class="modal-action">
      <button 
        type="submit" 
        class="btn" 
        form="close-delete-user-confirm"
      >
        Cancelar
      </button>
      <button type="submit" class="btn btn-error" form="delete-user-form">Eliminar</button>
    </div>
  </div>
</dialog>
